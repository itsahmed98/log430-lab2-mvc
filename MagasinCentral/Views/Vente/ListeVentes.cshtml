@model List<MagasinCentral.Models.Vente>

@{
    ViewData["Title"] = "Liste des ventes";
}

<h1 class="mt-4">Liste des ventes</h1>

@if (TempData["Succès"] != null)
{
    <div class="alert alert-success">@TempData["Succès"]</div>
}
@if (TempData["Erreur"] != null)
{
    <div class="alert alert-danger">@TempData["Erreur"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        Aucune vente enregistrée pour le moment.
    </div>
}
else
{
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Magasin</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vente in Model)
            {
                <tr>
                    <td>@vente.VenteId</td>
                    <td>@vente.Date.ToString("g")</td>
                    <td>@vente.Magasin?.Nom</td>
                    <td>@vente.Produit?.Nom</td>
                    <td>@vente.Quantite</td>
                    <td>@vente.PrixUnitaire.ToString("C")</td>
                    <td>@(vente.PrixUnitaire * vente.Quantite).ToString("C")</td>
                    <td>
                        <form asp-controller="Vente"
                              asp-action="Retour"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="venteId" value="@vente.VenteId" />
                            <button type="submit" class="btn btn-sm btn-warning"
                                    onclick="return confirm('Confirmer l\\'annulation de la vente #@vente.VenteId ?');">
                                Annuler
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
